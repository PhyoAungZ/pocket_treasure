<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:id="@+id/cvCurrentNews"
            style="@style/Widget.MaterialComponents.CardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:background="@color/md_white_1000"
            android:clickable="true"
            android:focusable="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:paddingStart="@dimen/global_unit_bigger"
                    android:paddingEnd="@dimen/global_unit_bigger"
                    android:text="@string/article_title"
                    android:textColor="@color/md_grey_700"
                    android:textSize="@dimen/text_global_unit_bigger_xxxxxx"
                    android:textStyle="bold" />

            <TextView
                    android:id="@+id/tvAuthor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/global_unit_bigger"
                    android:paddingEnd="@dimen/global_unit_bigger"
                    android:text="@string/by_author"
                    android:textColor="@color/md_grey_500"
                    android:textSize="@dimen/text_global_unit_bigger" />

            <ImageView
                    android:id="@+id/ivPostImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/global_unit_bigger"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/some_date"
                    android:maxHeight="@dimen/hundred_fifty_height"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_img_available" />

            <TextView
                    android:id="@+id/tvDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/global_unit_bigger"
                    android:maxLines="3"
                    android:paddingStart="@dimen/global_unit_bigger"
                    android:paddingEnd="@dimen/global_unit_bigger"
                    android:text="@string/some_description"
                    android:textColor="@color/md_grey_500"
                    android:textSize="@dimen/text_global_unit_bigger" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/global_unit_bigger"
                    android:orientation="horizontal"
                    android:weightSum="100">

                <TextView
                        android:id="@+id/tvSource"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="20"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/global_unit_bigger"
                        android:paddingRight="@dimen/global_unit_bigger"
                        android:text="@string/some_description"
                        android:textColor="@color/md_grey_500"
                        android:textSize="@dimen/text_global_unit_bigger" />

                <ImageView
                        android:id="@+id/ivShare"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="80"
                        android:background="?selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="@dimen/global_unit_bigger"
                        android:src="@drawable/ic_share_black_24dp" />
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>